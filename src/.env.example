# Copy this file to .env and fill in secrets before running docker-compose.
# All credentials are placeholders; change them immediately in production.

# Timezone shared across containers
TZ=UTC

# Mosquitto
MOSQUITTO_PORT=1883
MOSQUITTO_USERNAME=ming
MOSQUITTO_PASSWORD=changeMe

# InfluxDB 2.x bootstrap
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=changeMe
INFLUXDB_ORG=ming
INFLUXDB_BUCKET=machine_events
INFLUXDB_TOKEN=replace-with-long-token
INFLUXDB_HTTP_PORT=8086

# Node-RED
NODERED_PORT=1880

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeMe

# Frigate
FRIGATE_RTSP_PASSWORD=changeMe
FRIGATE_MEDIA_DIR=./media
FRIGATE_TPU_DEVICE=/dev/bus/usb
FRIGATE_WEB_PORT=8971
FRIGATE_RTSP_RESTREAM_PORT=8554

# sensingCam device
SICK_CAMERA_HOST=192.168.1.50
SICK_CAMERA_USERNAME=main
SICK_CAMERA_PASSWORD=servicelevel
SICK_CAMERA_TRIGGER_INPUT=false
