# Copy this file to .env and fill in secrets before running docker-compose.
# All credentials are placeholders; change them immediately in production.

# Timezone shared across containers
TZ=UTC

# Mosquitto
MOSQUITTO_PORT=1883
MOSQUITTO_USERNAME=ming
MOSQUITTO_PASSWORD=changeMe

# InfluxDB 2.x bootstrap
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=changeMe
DOCKER_INFLUXDB_INIT_ORG=ming
DOCKER_INFLUXDB_INIT_BUCKET=machine_events
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=replace-with-long-token
INFLUXDB_ORG=ming               # Downstream services expect these short names
INFLUXDB_BUCKET=machine_events   # Keep the values in sync with the DOCKER_* vars
INFLUXDB_TOKEN=replace-with-long-token
INFLUXDB_HTTP_PORT=8086

# Node-RED
NODERED_PORT=1880

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeMe

# Frigate
FRIGATE_RTSP_PASSWORD=changeMe
FRIGATE_MEDIA_DIR=./media
FRIGATE_TPU_DEVICE=/dev/bus/usb
FRIGATE_WEB_PORT=8971
FRIGATE_RTSP_RESTREAM_PORT=8554

# sensingCam device
SICK_CAMERA_HOST=192.168.1.50
SICK_CAMERA_USERNAME=main
SICK_CAMERA_PASSWORD=servicelevel
SICK_CAMERA_TRIGGER_INPUT=false
CAMERA_HOST=192.168.1.50
CAMERA_USERNAME=main
CAMERA_PASSWORD=servicelevel

# Backend API
BACKEND_PORT=4000
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=your-very-long-secret-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
