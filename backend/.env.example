# Server Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=replace-with-long-token
INFLUXDB_ORG=ming
INFLUXDB_BUCKET=machine_events

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=ming
MQTT_PASSWORD=changeMe
MQTT_CLIENT_ID=sensingcam-backend

# Frigate Configuration
FRIGATE_URL=http://frigate:8971
FRIGATE_API_KEY=

# Camera Configuration
CAMERA_HOST=192.168.1.50
CAMERA_USERNAME=main
CAMERA_PASSWORD=servicelevel
CAMERA_PROTOCOL=http

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
